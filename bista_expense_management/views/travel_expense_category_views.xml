<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_travel_expense_category_form" model="ir.ui.view">
        <field name="name">travel.expense.category.form</field>
        <field name="model">travel.expense.category</field>
        <field name="arch" type="xml">
            <form string="Travel Expense Category">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary"
                            invisible="state != 'draft'"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="type" widget="radio" options="{'horizontal': True}"/>
                        <field name="meal_type" widget="radio" options="{'horizontal': True}" invisible="type != 'per_diem'" required="type == 'per_diem'" force_save="1"/>
                        <field name="price_unit" readonly="type == 'per_diem'" force_save="1"/>
                        <field name="is_po_approve"/>
                        <field name="product_id" readonly="1"/>
                        <field name="company_id" invisible="1"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_travel_expense_category_tree" model="ir.ui.view">
        <field name="name">travel.expense.category.tree</field>
        <field name="model">travel.expense.category</field>
        <field name="arch" type="xml">
            <list string="Travel Expense Categories">
                <field name="name"/>
                <field name="type"/>
                <field name="is_po_approve"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="action_travel_expense_category" model="ir.actions.act_window">
        <field name="name">Travel Expense Categories</field>
        <field name="res_model">travel.expense.category</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_travel_expense_category" name="Travel Expense Categories"
              parent="hr_expense.menu_hr_expense_configuration" action="action_travel_expense_category"/>
</odoo>
