<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="expense_purchase_order_form" model="ir.ui.view">
        <field name="name">expense_purchase_order_form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="travel_id"/>
                <field name="is_travel_po"/>
                <field name="po_fully_paid"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/list/field[last()]" position="after">
                <field name="travel_line_id"/>
                <field name="is_travel_line"/>
            </xpath>

        </field>
    </record>
</odoo>
