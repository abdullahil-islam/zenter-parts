<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="category_corporate_travel_expense" model="ir.module.category">
        <field name="name">Corporate Travel Expense</field>
        <field name="description">Access groups for Corporate Travel Expense</field>
        <field name="sequence">90</field>
        <field name="visible" eval="True"/>
    </record>
    <record id="group_md" model="res.groups">
        <field name="name">Managing Director</field>
        <field name="category_id" ref="bista_expense_management.category_corporate_travel_expense"/>
    </record>
    <record id="group_fd" model="res.groups">
        <field name="name">Finance Director</field>
        <field name="category_id" ref="bista_expense_management.category_corporate_travel_expense"/>
    </record>
    <record id="group_travel_user" model="res.groups">
        <field name="name">Corporate Travel User</field>
        <field name="category_id" ref="bista_expense_management.category_corporate_travel_expense"/>
    </record>

    <record id="rule_corporate_travel_user_own" model="ir.rule">
        <field name="name">Corporate Travel: Own Records</field>
        <field name="model_id" ref="bista_expense_management.model_corporate_travel"/>
        <field name="groups" eval="[(4, ref('bista_expense_management.group_travel_user'))]"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
    </record>

</odoo>
