<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Add backorder_qty field to sale order line tree view -->
        <record id="view_order_form_backorder_qty" model="ir.ui.view">
            <field name="name">sale.order.form.backorder.qty</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                
                <!-- Add backorder_qty column after qty_delivered in order lines -->
                <xpath expr="//field[@name='order_line']/list/field[@name='product_uom_readonly']" position="before">
                    <field name="backorder_qty" optional="show"/>
                    <field name="can_edit_discount" column_invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='order_line']/list/field[@name='discount']" position="attributes">
                    <attribute name="readonly">not can_edit_discount</attribute>
                </xpath>

                <button name="action_open_discount_wizard" position="before">
                    <field name="can_edit_discount" invisible="1"/>
                </button>

                <button name="action_open_discount_wizard" position="attributes">
                    <attribute name="invisible">not can_edit_discount</attribute>
                </button>
                
            </field>
        </record>
    </data>
</odoo>
