<odoo>
    <record id="view_supplier_reject_wizard_form" model="ir.ui.view">
        <field name="name">supplier.reject.wizard.form</field>
        <field name="model">supplier.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Application" class="o_form_modal">
                <group>
                    <field name="lead_id" invisible="1"/>
                    <field name="reason" placeholder="Explain why this application is rejected..." required="1"/>
                </group>
                <footer>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    <button name="action_confirm" string="Confirm Reject" type="object" class="btn btn-danger"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
