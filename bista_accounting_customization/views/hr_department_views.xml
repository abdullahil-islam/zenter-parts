<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_hr_department_inherit" model="ir.ui.view">
        <field name="name">hr_department_form_inherit</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref="hr.view_department_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='color']" position="after">
                <field name="analytic_distribution" widget="analytic_distribution" groups="analytic.group_analytic_accounting"/>
            </xpath>

        </field>
    </record>

</odoo>
