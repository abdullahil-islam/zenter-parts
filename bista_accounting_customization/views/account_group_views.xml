<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="inherit_view_account_group_form" model="ir.ui.view">
        <field name="name">inherit_view_account_group_form</field>
        <field name="model">account.group</field>
        <field name="inherit_id" ref="account.view_account_group_form"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='code_prefix_start']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='company_id']" position="before">
                <field name="explicit_account_codes"/>
            </xpath>

        </field>
    </record>

    <record id="inherit_view_account_group_tree" model="ir.ui.view">
        <field name="name">inherit_view_account_group_tree</field>
        <field name="model">account.group</field>
        <field name="inherit_id" ref="account.view_account_group_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='code_prefix_start']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='code_prefix_end']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="before">
                <field name="explicit_account_codes"/>
            </xpath>

        </field>
    </record>
</odoo>
