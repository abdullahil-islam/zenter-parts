<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_brand_search_form_view" model="ir.ui.view">
        <field name="name">product.brand.search.form</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <search string="Product Brand">
                <field name="name"/>
            </search>
        </field>
    </record>
    
    <record id="view_product_brand_tree" model="ir.ui.view">
        <field name="name">product.brand.tree</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>
    
    <record id="view_product_brand_form" model="ir.ui.view">
        <field name="name">product.brand.form</field>
        <field name="model">product.brand</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                                name="%(action_open_brand_products)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-cubes"
                                context="{'default_product_brand_id': id}"
                        >
                            <field
                                    name="products_count"
                                    widget="statinfo"
                                    string="Products"
                            />
                        </button>
                    </div>
                    <field name="logo" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name" string="Brand Name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g. Apple"/>
                        </h1>
                    </div>
                    
                    <group name='main_group'>
                        <field name="analytic_distribution" widget="analytic_distribution" groups="analytic.group_analytic_accounting"/>
                    </group>

                    <notebook>
                        <page name="description" string="Description">
                            <field name="description" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_product_brand">
        <field name="name">Brand</field>
        <field name="res_model">product.brand</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        name="Product Brands"
        id="menu_product_brand"
        action="action_product_brand"
        sequence="2"
        parent="account.account_management_menu"
    />
</odoo>
