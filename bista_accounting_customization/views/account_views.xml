<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="account_form_view_inherit" model="ir.ui.view">
            <field name="name">account_form_view_inherit</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">

                <xpath expr="//page[@name='accounting']/group" position="inside">
                    <group name="cental_acc" string="Central Ledger">
                        <field name="central_account_name"/>
                        <field name="central_acc_code"/>
                    </group>
                </xpath>

            </field>
        </record>

        <record id="analytic_plan_form_view_inherit" model="ir.ui.view">
            <field name="name">analytic_plan_form_view_inherit</field>
            <field name="model">account.analytic.plan</field>
            <field name="inherit_id" ref="analytic.account_analytic_plan_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='color']" position="after">
                    <field name="is_eligible_customer"/>
                    <field name="is_eligible_product"/>
                    <field name="is_eligible_prod_brand" string='Is Eligible Product Brand'/>
                    <field name="is_eligible_prod_categ" string='Is Eligible Product Family'/>
                    <field name="is_eligible_user" string='Is Eligible User'/>
                    <field name="is_eligible_hr_department" string='Is Eligible Hr Department'/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
