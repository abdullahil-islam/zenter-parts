<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_category_views_inherit" model="ir.ui.view">
        <field name="name">product_category_views_inherit</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='first']" position="after">
                <group name='analytic_group'>
                    <field name="analytic_distribution" widget="analytic_distribution" groups="analytic.group_analytic_accounting"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="action_create_categ_analytic_accounts" model="ir.actions.server">
        <field name="name">Assign and Sync Analytic</field>
        <field name="model_id" ref="product.model_product_category"/>
        <field name="binding_model_id" ref="product.model_product_category"/>
        <field name="state">code</field>
        <field name="code">action = records.action_automatic_sync_analytics()</field>
    </record>

</odoo>
