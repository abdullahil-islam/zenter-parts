<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Form View -->
    <record id="view_country_group_analytic_distribution_form" model="ir.ui.view">
        <field name="name">country.group.analytic.distribution.form</field>
        <field name="model">country.group.analytic.distribution</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="country_group_id" options="{'no_create': True}"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="analytic_distribution"
                                   widget="analytic_distribution"
                                   groups="analytic.group_analytic_accounting"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_country_group_analytic_distribution_tree" model="ir.ui.view">
        <field name="name">country.group.analytic.distribution.tree</field>
        <field name="model">country.group.analytic.distribution</field>
        <field name="arch" type="xml">
            <list>
                <field name="country_group_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="analytic_distribution" widget="analytic_distribution"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_country_group_analytic_distribution" model="ir.actions.act_window">
        <field name="name">Country Group Analytic Distributions</field>
        <field name="res_model">country.group.analytic.distribution</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item -->
    <menuitem
            id="menu_country_group_analytic_distribution"
            name="Country Group Distributions"
            parent="contacts.menu_localisation"
            action="action_country_group_analytic_distribution"
            sequence="10"
    />
</odoo>
