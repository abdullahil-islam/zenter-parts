<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Form View -->
    <record id="view_country_group_analytic_distribution_form" model="ir.ui.view">
        <field name="name">country.group.analytic.distribution.form</field>
        <field name="model">country.group.analytic.distribution</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="country_id" options="{'no_create': True}"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="analytic_distribution"
                                   widget="analytic_distribution"
                                   groups="analytic.group_analytic_accounting"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_country_group_analytic_distribution_tree" model="ir.ui.view">
        <field name="name">country.group.analytic.distribution.tree</field>
        <field name="model">country.group.analytic.distribution</field>
        <field name="arch" type="xml">
            <list>
                <field name="country_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="analytic_distribution" widget="analytic_distribution"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_country_group_analytic_distribution" model="ir.actions.act_window">
        <field name="name">Country Group Analytic Distributions</field>
        <field name="res_model">country.group.analytic.distribution</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item -->
    <menuitem
            id="menu_country_group_analytic_distribution"
            name="Country Group Distributions"
            parent="contacts.menu_localisation"
            action="action_country_group_analytic_distribution"
            sequence="10"
    />

    <record id="action_automatic_entry_change_period" model="ir.actions.server">
        <field name="name">Sync Country/Region Analytics</field>
        <field name="model_id" ref="bista_accounting_customization.model_country_group_analytic_distribution"/>
        <field name="binding_model_id" ref="bista_accounting_customization.model_country_group_analytic_distribution"/>
        <field name="state">code</field>
        <field name="code">action = records.action_syc_country_analytics()</field>
    </record>

    <record id="action_create_analytic_accounts" model="ir.actions.server">
        <field name="name">Assign Analytic Accounts</field>
        <field name="model_id" ref="bista_accounting_customization.model_country_group_analytic_distribution"/>
        <field name="binding_model_id" ref="bista_accounting_customization.model_country_group_analytic_distribution"/>
        <field name="state">code</field>
        <field name="code">action = records.action_automatic_entry()</field>
    </record>
</odoo>
